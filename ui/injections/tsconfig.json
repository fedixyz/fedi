{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "ES5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "incremental": true,
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "typeRoots": [
            "src/typings",
            "node_modules/@types/",
            "../node_modules/@types/"
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
